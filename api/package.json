{
	"name": "apiserver",
	"version": "1.0.0",
	"description": "",
	"main": "./src/index.ts",
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf ./build/*",
		"lint": "eslint -c ./.eslintrc.json './src/**/*.ts'",
		"typeorm:dropschema": "NODE_ENV=test node -r ts-node/register ./node_modules/typeorm/cli.js -f ./src/config/ormconfig.ts schema:drop",
		"prettier:check": "prettier --config .prettierrc.json --check '{src,tests}/**/*.ts' '!src/routes.ts'",
		"prettier:write": "prettier --config .prettierrc.json --write '{src,tests}/**/*.ts' '!src/routes.ts'",
		"start": "NODE_ENV=dev node -r ts-node/register -r dotenv/config ./build/index.js",
		"start:watch": "nodemon",
		"start:watch:dev": "nodemon",
		"swagger": "tsoa spec-and-routes",
		"test": "NODE_ENV=test mocha -r ts-node/register -r dotenv/config --timeout 10000 --exit ./tests/*.test.ts",
		"coverage": "nyc npm run test"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@tsoa/runtime": "^3.13.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.1",
		"express-jwt": "^6.1.0",
		"helmet": "^4.6.0",
		"jwks-rsa": "^2.0.5",
		"nodemon": "^2.0.14",
		"promise.any": "^2.0.3",
		"swagger-ui-express": "^4.1.6",
		"tsoa": "^3.2.1",
		"typeorm": "^0.2.41",
		"typescript": "^4.4.4"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/chai": "^4.2.22",
		"@types/chai-http": "^4.2.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/mocha": "^9.0.0",
		"@types/request": "^2.48.7",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"chai": "^4.3.4",
		"chai-http": "^4.3.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-security": "^1.4.0",
		"jsonwebtoken": "^8.5.1",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0",
		"prettier": "^2.4.1",
		"request": "^2.88.2",
		"ts-node": "^10.4.0",
		"typeorm-seeding": "^1.6.1",
		"uuid": "^8.3.2"
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules",
			"./src/routes.ts"
		],
		"watch": [
			"./src"
		],
		"exec": "yarn swagger; yarn build; yarn start",
		"ext": "ts"
	}
}

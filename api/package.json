{
	"name": "api",
	"version": "1.0.0",
	"description": "",
	"main": "./src/index.ts",
	"scripts": {
		"build:local": "tsc",
		"build": "tsc && curl --create-dirs -o root.crt -O https://cockroachlabs.cloud/clusters/f82eaea0-cfe2-4492-aa07-e986cd93e46d/cert",
		"clean": "rm -rf ./build/*",
		"lint": "eslint -c .eslintrc.json './src/**/*.ts'",
		"db:test:dropschema": "NODE_ENV=test node -r ts-node/register ./node_modules/typeorm/cli.js schema:drop -d ./src/index.ts",
		"db:test:sync": "NODE_ENV=test node -r ts-node/register ./node_modules/typeorm/cli.js schema:sync -d ./src/index.ts",
		"prettier:check": "prettier --config .prettierrc.json --check '{src,tests}/**/*.ts' '!src/routes.ts'",
		"prettier:write": "prettier --config .prettierrc.json --write '{src,tests}/**/*.ts' '!src/routes.ts'",
		"start": "NODE_ENV=dev node -r ts-node/register ./build/index.js",
		"start:watch": "nodemon",
		"start:watch:dev": "nodemon",
		"swagger": "tsoa spec-and-routes",
		"test": "NODE_ENV=test mocha -r ts-node/register --timeout 30000 --exit ./tests/*.test.ts",
		"coverage": "nyc npm run test"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@tsoa/runtime": "^5.0.0",
		"auth0": "^3.0.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-jwt": "^8.3.0",
		"express-rate-limit": "^6.7.0",
		"helmet": "^6.0.1",
		"jwks-rsa": "^3.0.0",
		"nodemon": "^2.0.20",
		"pg": "^8.8.0",
		"promise.any": "^2.0.5",
		"swagger-ui-express": "^4.6.0",
		"ts-node": "^10.9.1",
		"tsoa": "^5.0.0",
		"typeorm": "^0.3.11",
		"typescript": "^4.9.4"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/auth0": "^2.35.8",
		"@types/chai": "^4.3.4",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.15",
		"@types/jsonwebtoken": "^9.0.0",
		"@types/mocha": "^10.0.1",
		"@types/request": "^2.48.8",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"eslint": "^8.31.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-security": "^1.5.0",
		"jsonwebtoken": "^9.0.0",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"prettier": "^2.8.2",
		"request": "^2.88.2",
		"uuid": "^9.0.0"
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			"node_modules",
			"./src/routes.ts"
		],
		"watch": [
			"./src"
		],
		"exec": "npm run swagger; npm run build:local; npm run start",
		"ext": "ts"
	}
}
